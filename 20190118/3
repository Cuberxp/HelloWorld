
import java.math.BigInteger;
import java.util.Scanner;

/*
 * 求出1 + ... n 的和
 * */
public class Main {
	public static void main(String[] args) {
		Scanner sr = new Scanner(System.in);
		
		long n = sr.nextLong();
		
		BigInteger bg1 = new BigInteger("0");
		
		bg1 = new BigInteger((n + 1) * n / 2 + "");
		
		System.out.println(bg1);
		sr.close();
	}
}
